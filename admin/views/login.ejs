<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <title>Login - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="../assets/favicon-8fd74f43.ico" />
    <script
      type="module"
      crossorigin
      src="../assets/theme-e4584917.js"
    ></script>
    <link rel="stylesheet" href="../assets/theme-d32f8eb8.css" />
    <!-- SweetAlert2 CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <style>
      /* Ajusta o fundo para cobrir toda a tela */
      body {
        background-image: url("/assets/auth-bg-f57aaf4d.png");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
      }
      /* Exemplo para garantir que o logo seja responsivo */
      .logo-img {
        max-width: 70%;
        height: auto;
      }
    </style>
  </head>
  <body class="relative lg:h-screen py-6 flex justify-center items-center">
    <div class="container">
      <div class="flex justify-center">
        <div class="lg:w-1/3 md:w-2/3 w-full relative">
          <div
            class="relative bg-white rounded-lg shadow-lg p-6 z-10 dark:bg-default-50"
          >
            <a href="/" class="block mb-8 text-center">
              <!-- Agora a imagem tem classe para responsividade -->
              <img
                class="logo-img mx-auto"
                src="../assets/saep.png"
                alt="Logo saep"
              />
            </a>
            <h4
              class="text-2xl font-semibold text-default-800 mb-4 text-center"
            >
              Login
            </h4>
            <p class="mb-10 dark:text-default-600 text-center">
              Bem-vindo de volta!
            </p>

            <form action="/admin/login" method="POST" class="mt-10">
              <div class="mb-4">
                <label
                  for="email"
                  class="block text-base font-semibold text-default-900 mb-2"
                  >E-mail</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="block w-full rounded py-2.5 px-4 border-default-200 text-default-900 focus:outline-0 focus:ring-0"
                  placeholder="Digite seu e-mail"
                  required
                />
              </div>

              <div class="mb-4">
                <label
                  for="password"
                  class="block text-base font-semibold text-default-900 mb-2"
                  >Senha</label
                >
                <div class="flex">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="block w-full rounded-s py-2.5 px-4 border border-default-200 text-default-900 focus:ring-transparent"
                    placeholder="Digite sua senha"
                    required
                  />
                </div>
              </div>

              <div class="flex justify-between items-center mb-6">
                <div class="inline-flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 rounded border-default-200 bg-default-100 text-primary shadow-sm"
                    id="checkbox-signin"
                  />
                  <label
                    class="text-base ms-2 text-default-900"
                    for="checkbox-signin"
                    >Lembrar-me</label
                  >
                </div>
                <a href="/recuperar-senha" class="border-b border-dashed"
                  ><small>Esqueceu sua senha?</small></a
                >
              </div>

              <div class="mb-6 text-center">
                <button
                  type="submit"
                  class="inline-flex items-center justify-center px-6 py-3 rounded bg-primary text-white w-full transition-all hover:bg-primary-500"
                >
                  Entrar
                </button>
              </div>

              <h4 class="text-center text-base text-default-700 mb-4">
                NÃ£o tem uma conta?
                <a href="/admin/registro" class="text-primary">Cadastre-se</a>
              </h4>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const alertMessage = "<%= message %>";
        if (alertMessage && alertMessage.trim() !== "") {
          Swal.fire({
            title: "Erro!",
            text: alertMessage,
            icon: "error",
            confirmButtonText: "OK",
            timer: 3000,
            timerProgressBar: true,
          });
        }
      });
    </script>
  </body>
</html>
