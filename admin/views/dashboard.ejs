<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard - Análise Geral</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Inclusão do Bootstrap CSS para layout responsivo e estilização -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Inclusão do ApexCharts para renderização dos gráficos -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <!-- Inclusão de CSS personalizado (pode ser ajustado conforme a identidade visual do projeto) -->
    <link rel="stylesheet" href="../assets/theme-d32f8eb8.css" />
    <style>
      /* Estilização básica do layout */
      body {
        background-color: #f0f0f0;
      }
      .title {
        font-size: 2rem;
        font-weight: bold;
      }
      .card-custom {
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        background-color: #fff;
        padding: 1.5rem;
        margin-bottom: 2rem;
      }
      .nav-tabs {
        border-bottom: 2px solid #dee2e6;
      }
      .nav-tabs .nav-link {
        font-weight: 600;
        border: 2px solid transparent;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
        padding: 0.5rem 1rem;
        transition: border-color 0.3s, color 0.3s;
      }
      .nav-tabs .nav-link.active {
        border-color: #dee2e6 #dee2e6 #fff;
      }
      .tabs-custom {
        background-color: #f0f0f0;
        padding: 1rem;
        border-radius: 0.5rem;
      }
      .performance-item {
        text-align: center;
        padding: 0.5rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
        margin-bottom: 0.5rem;
      }
      .performance-item .label {
        font-size: 0.9rem;
        font-weight: 600;
        color: #495057;
      }
      .performance-item .value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #212529;
      }
      .chart-card {
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        background-color: #fff;
        margin-top: 2rem;
      }
      .chart-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
      }
      .chart-card-header h5 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 500;
        text-transform: capitalize;
      }
      .chart-card-body {
        padding: 1rem 1.25rem;
        border-top: 2px dashed #dee2e6;
      }
      /* Define o tamanho dos gráficos: tanto o Donut quanto o Bar terão 287px */
      #donut_chart,
      #bar_chart {
        min-height: 287px;
      }
      /* Define o tamanho do novo gráfico de desempenho individual */
      #student_chart {
        min-height: 350px;
      }
    </style>
  </head>
  <body>
    <!-- Inclusão do Sidebar (via partial) -->
    <%- include('partials/sidebar') %>

    <!-- Container principal que engloba header, conteúdo e footer -->
    <div class="min-h-screen flex flex-col lg:ps-64 w-full">
      <!-- Inclusão do Header (via partial) -->
      <%- include('partials/header') %>

      <!-- Área de conteúdo onde ficam os filtros, cards e gráficos -->
      <div class="container my-5">
        <!-- Formulário de Filtro -->
        <div class="mb-4">
          <!-- Formulário para seleção de Curso e Turma; os dados são enviados via GET para a rota /admin/dashboard -->
          <form method="GET" action="/admin/dashboard" class="row g-3">
            <div class="col-md-4">
              <label for="curso" class="form-label">Selecione o Curso</label>
              <select class="form-select" name="curso" id="curso" required>
                <option value="">-- Escolha um Curso --</option>
                <% cursos.forEach(cursoItem => { %>
                  <option value="<%= cursoItem.id %>" <% if(cursoFiltro == cursoItem.id) { %> selected <% } %>>
                    <%= cursoItem.nome %>
                  </option>
                <% }); %>
              </select>
            </div>
            <div class="col-md-4">
              <label for="turma" class="form-label">Selecione a Turma</label>
              <select class="form-select" name="turma" id="turma" required>
                <option value="">-- Escolha uma Turma --</option>
                <% if (turmas && turmas.length > 0) { %>
                  <% turmas.forEach(turmaItem => { %>
                    <option value="<%= turmaItem.id %>" <% if(turmaFiltro == turmaItem.id) { %> selected <% } %>>
                      <%= turmaItem.nome %>
                    </option>
                  <% }); %>
                <% } %>
              </select>
            </div>
            <div class="col-md-4 align-self-end">
              <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
          </form>
        </div>

        <!-- Título da Página -->
        <h2 class="title mb-3">Análise Geral</h2>

        <!-- Card de Performance: exibe a média das notas dos alunos de todos os simulados -->
        <div class="card-custom">
          <div class="row">
            <!-- Primeira coluna: contém o título e a descrição do card -->
            <div class="col-lg-5">
              <h5>Média das Notas dos Alunos</h5>
              <p class="text-muted">Confira abaixo a média das notas dos alunos que realizaram todos os simulados.</p>
            </div>
            <!-- Segunda coluna: contém as abas para exibição dos dados em dois formatos (Pontuação Normal e Líquida) -->
            <div class="col-lg-7">
              <div class="tabs-custom">
                <ul class="nav nav-tabs" id="analiseTab" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link active"
                      id="normal-tab"
                      data-bs-toggle="tab"
                      data-bs-target="#normal"
                      type="button"
                      role="tab"
                      aria-controls="normal"
                      aria-selected="true"
                    >
                      Pontuação Normal
                    </button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="liquida-tab"
                      data-bs-toggle="tab"
                      data-bs-target="#liquida"
                      type="button"
                      role="tab"
                      aria-controls="liquida"
                      aria-selected="false"
                    >
                      Pontuação Líquida
                    </button>
                  </li>
                </ul>
                <div class="tab-content pt-3" id="analiseTabContent">
                  <!-- Conteúdo da aba "Pontuação Normal" -->
                  <div class="tab-pane fade show active" id="normal" role="tabpanel" aria-labelledby="normal-tab">
                    <div class="row">
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Média Geral</div>
                          <div class="value"><%= performanceData.nota %> / 100</div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Acertos Médios</div>
                          <div class="value"><%= performanceData.correctCount %> / <%= performanceData.totalQuestions %></div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Duração Média</div>
                          <div class="value"><%= performanceData.duracaoAluno %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Conteúdo da aba "Pontuação Líquida" -->
                  <div class="tab-pane fade" id="liquida" role="tabpanel" aria-labelledby="liquida-tab">
                    <div class="row">
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Média Geral</div>
                          <div class="value"><%= performanceData.nota %> / 100</div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Acertos Médios</div>
                          <div class="value"><%= performanceData.correctCount %> / <%= performanceData.totalQuestions %></div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Erros Médios</div>
                          <div class="value"><%= performanceData.wrongAnswers %> / <%= performanceData.totalQuestions %></div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="performance-item">
                          <div class="label">Em Branco</div>
                          <div class="value"><%= performanceData.blank %> / <%= performanceData.totalQuestions %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Fim das abas -->
              </div>
            </div>
          </div>
        </div>

        <!-- Card para o Donut Chart (Percentual de rendimento) -->
        <div class="card-custom chart-card">
          <div class="card-header">
            <h5>Percentual de rendimento</h5>
          </div>
          <div class="card-body">
            <div id="donut_chart" class="apex-charts" dir="ltr"></div>
          </div>
        </div>

        <!-- Card para o Bar Chart (Desempenho por UC) -->
        <div class="card-custom chart-card">
          <div class="card-header">
            <h5 class="text-capitalize">Desempenho por UC</h5>
          </div>
          <div class="card-body">
            <div id="bar_chart" class="apex-charts"></div>
          </div>
        </div>

        <!-- Novo Card para o Gráfico de Desempenho dos Alunos Individualmente com a Média da Turma -->
        <div class="card-custom chart-card">
          <div class="card-header">
            <h5>Desempenho Individual dos Alunos</h5>
          </div>
          <div class="card-body">
            <div id="student_chart" class="apex-charts"></div>
          </div>
        </div>

        <!-- Container oculto para armazenar os dados dos gráficos (usando data attributes) -->
        <!-- Adicionamos novos atributos para os dados dos alunos -->
        <div
          id="chart-data"
          data-uc-labels='<%= JSON.stringify(performanceData.ucLabels) %>'
          data-acertos='<%= JSON.stringify(performanceData.acertosData) %>'
          data-erros='<%= JSON.stringify(performanceData.errosData) %>'
          data-student-labels='<%= JSON.stringify(performanceData.studentLabels) %>'
          data-student-grades='<%= JSON.stringify(performanceData.studentGrades) %>'
        ></div>
      </div>

      <!-- Inclusão do Footer (via partial) -->
      <%- include('partials/footer') %>
    </div>

    <!-- Inclusão do Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts para renderizar os gráficos após o carregamento do DOM -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // ---------------------------
        // Renderização do Donut Chart (Percentual de rendimento)
        // ---------------------------
        var wrong = Number("<%= performanceData.wrongAnswers %>");
        var correct = Number("<%= performanceData.correctCount %>");
        var blankVal = Number("<%= performanceData.blank %>");
        var seriesData = [wrong, correct, blankVal];

        var donutOptions = {
          chart: {
            type: "donut",
            height: "100%"
          },
          series: seriesData,
          labels: ["Erros", "Acertos", "Em Branco"],
          responsive: [{
            breakpoint: 480,
            options: {
              chart: { width: 300 },
              legend: { position: "bottom" }
            }
          }]
        };

        var donutChart = new ApexCharts(document.querySelector("#donut_chart"), donutOptions);
        donutChart.render();

        // ---------------------------
        // Renderização do Bar Chart (Desempenho por UC)
        // ---------------------------
        var dataEl = document.getElementById("chart-data");
        var ucLabels = JSON.parse(dataEl.getAttribute("data-uc-labels"));
        var acertosDataRaw = JSON.parse(dataEl.getAttribute("data-acertos"));
        var errosDataRaw = JSON.parse(dataEl.getAttribute("data-erros"));

        var acertosData = acertosDataRaw.map(function (val) { return Number(val); });
        var errosData = errosDataRaw.map(function (val) { return Number(val); });

        var barOptions = {
          chart: {
            type: "bar",
            height: 287
          },
          plotOptions: {
            bar: {
              horizontal: false,
              columnWidth: "55%",
              endingShape: "rounded"
            }
          },
          dataLabels: {
            enabled: true,
            style: {
              fontSize: "12px",
              colors: ["#fff"]
            }
          },
          stroke: {
            show: true,
            width: 2,
            colors: ["transparent"]
          },
          series: [
            {
              name: "Acertos",
              data: acertosData
            },
            {
              name: "Erros",
              data: errosData
            }
          ],
          xaxis: {
            categories: ucLabels
          },
          yaxis: {
            title: {
              text: "Quantidade"
            }
          },
          fill: {
            opacity: 1
          },
          tooltip: {
            y: {
              formatter: function (val) {
                return val;
              }
            }
          }
        };

        var barChart = new ApexCharts(document.querySelector("#bar_chart"), barOptions);
        barChart.render();

        // ---------------------------
        // Renderização do Novo Gráfico: Desempenho Individual dos Alunos com a Média da Turma
        // ---------------------------
        // Lê os dados de alunos: labels (nomes ou identificadores) e suas notas individuais
        var studentLabels = JSON.parse(dataEl.getAttribute("data-student-labels"));
        var studentGradesRaw = JSON.parse(dataEl.getAttribute("data-student-grades"));
        var studentGrades = studentGradesRaw.map(function(val) { return Number(val); });

        // Obtém a média da turma (a propriedade "classAverage" deve ser enviada no performanceData pelo back-end)
        var classAverage = Number("<%= performanceData.classAverage %>");

        // Define as opções do gráfico de barras para o desempenho individual dos alunos
        var studentChartOptions = {
          chart: {
            type: 'bar',
            height: 350
          },
          series: [{
            name: 'Nota',
            data: studentGrades
          }],
          xaxis: {
            categories: studentLabels
          },
          // Adiciona uma annotation no eixo Y para indicar a média da turma
          annotations: {
            yaxis: [{
              y: classAverage,
              borderColor: '#FF4560',
              label: {
                borderColor: '#FF4560',
                style: {
                  color: '#fff',
                  background: '#FF4560'
                },
                text: 'Média da Turma'
              }
            }]
          },
          title: {
            text: 'Desempenho Individual com Média da Turma',
            align: 'center'
          }
        };

        var studentChart = new ApexCharts(document.querySelector("#student_chart"), studentChartOptions);
        studentChart.render();
      });
    </script>
  </body>
</html>