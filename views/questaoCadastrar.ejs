<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Add Question - Simulação Saep</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="assets/favicon-8fd74f43.ico" />
    <link rel="stylesheet" href="assets/theme-d32f8eb8.css" />
    <!-- Choices.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
    <!-- SweetAlert2 CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Choices.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <style>
      .modal-overlay {
        z-index: 9999;
      }
      .swal2-container {
        z-index: 100000 !important;
      }
    </style>
  </head>
  <body class="bg-primary/10">
    <%- include('partials/sidebar') %>
    <div class="min-h-screen flex flex-col lg:ps-64 w-full">
      <%- include('partials/header') %>

      <div class="p-6 space-y-6">
        <!-- Cabeçalho e breadcrumb (opcional) -->
        <div class="flex items-center justify-between w-full print:hidden">
          <h4 class="text-lg font-semibold text-default-900">Questões</h4>
          <ol
            aria-label="Breadcrumb"
            class="hidden md:flex items-center whitespace-nowrap min-w-0 gap-2"
          >
            <li class="text-sm">
              <a
                class="flex items-center gap-2 text-default-800 font-medium transition-all hover:text-primary-500"
                href="javascript:void(0)"
              >
                Simulação Saep
                <i class="w-4 h-4" data-lucide="chevron-right"></i>
              </a>
            </li>
            <li class="text-sm">
              <a
                class="flex items-center gap-2 text-default-800 font-medium transition-all hover:text-primary-500"
                href="javascript:void(0)"
              >
                Questions
                <i class="w-4 h-4" data-lucide="chevron-right"></i>
              </a>
            </li>
            <li
              aria-current="page"
              class="text-sm font-medium text-primary-600 truncate hover:text-primary-500"
            >
              Add Question
            </li>
          </ol>
        </div>

        <!-- Formulário de cadastro de questão -->
        <div class="shadow rounded-lg bg-white dark:bg-default-50 h-fit">
          <div class="flex items-center justify-between py-4 px-5">
            <h4 class="text-lg font-medium text-default-950 capitalize">
              Question Information
            </h4>
          </div>
          <div class="p-5 border-t border-dashed border-default-200">
            <form
              id="form-cadastrar-questao"
              action="/cadastrar-questao"
              method="POST"
            >
              <div class="grid md:grid-cols-2 gap-4">
                <!-- Select de Curso usando Choices.js com remoção -->
                <div class="w-full">
                  <div class="mb-2">
                    <label
                      for="choices-multiple-remove-button"
                      class="form-label font-medium text-13 text-gray-500 dark:text-zinc-100"
                    >
                      Selecione o curso
                    </label>
                  </div>
                  <select
                    name="curso_id"
                    id="choices-multiple-remove-button"
                    placeholder="Selecione o curso"
                    required
                  >
                    <% if (typeof cursos !== 'undefined' && cursos.length > 0) {
                    %> <% cursos.forEach(curso => { %>
                    <option value="<%= curso.id %>"><%= curso.nome %></option>
                    <% }); %> <% } else { %>
                    <option value="">No course available</option>
                    <% } %>
                  </select>
                </div>
                <!-- Select de Matéria, que será atualizado com base no curso selecionado -->
                <div class="w-full">
                  <div class="mb-2">
                    <label
                      for="select-materia"
                      class="form-label font-medium text-13 text-gray-500 dark:text-zinc-100"
                    >
                      Selecione a matéria
                    </label>
                  </div>
                  <select
                    name="materia_id"
                    id="select-materia"
                    placeholder="Select Subject"
                    required
                  >
                    <!-- Inicialmente vazio; será preenchido via AJAX -->
                  </select>
                </div>
                <!-- Título -->
                <div class="space-y-1 md:col-span-2">
                  <label
                    for="questao_titulo"
                    class="text-sm font-medium text-default-900"
                    >Titúlo</label
                  >
                  <input
                    type="text"
                    name="titulo"
                    id="questao_titulo"
                    placeholder="Enter question title"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
                <!-- Enunciado -->
                <div class="space-y-1 md:col-span-2">
                  <label
                    for="questao_enunciado"
                    class="text-sm font-medium text-default-900"
                    >Question Statement</label
                  >
                  <textarea
                    name="enunciado"
                    id="questao_enunciado"
                    placeholder="Enter question statement"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  ></textarea>
                </div>
                <!-- Alternativas -->
                <div class="space-y-1">
                  <label
                    for="questao_alternativa_a"
                    class="text-sm font-medium text-default-900"
                    >Alternativa A</label
                  >
                  <input
                    type="text"
                    name="alternativa_a"
                    id="questao_alternativa_a"
                    placeholder="Enter option A"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
                <div class="space-y-1">
                  <label
                    for="questao_alternativa_b"
                    class="text-sm font-medium text-default-900"
                    >Alternativa B</label
                  >
                  <input
                    type="text"
                    name="alternativa_b"
                    id="questao_alternativa_b"
                    placeholder="Enter option B"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
                <div class="space-y-1">
                  <label
                    for="questao_alternativa_c"
                    class="text-sm font-medium text-default-900"
                    >Alternativa C</label
                  >
                  <input
                    type="text"
                    name="alternativa_c"
                    id="questao_alternativa_c"
                    placeholder="Enter option C"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
                <div class="space-y-1">
                  <label
                    for="questao_alternativa_d"
                    class="text-sm font-medium text-default-900"
                    >Alternativa D
                  </label>
                  <input
                    type="text"
                    name="alternativa_d"
                    id="questao_alternativa_d"
                    placeholder="Enter option D"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
                <!-- Resposta Correta -->
                <div class="space-y-1 md:col-span-2">
                  <label
                    for="questao_resposta_correta"
                    class="text-sm font-medium text-default-900"
                    >Correct Answer (A, B, C or D)</label
                  >
                  <input
                    type="text"
                    name="resposta_correta"
                    id="questao_resposta_correta"
                    placeholder="Enter correct option"
                    maxlength="1"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  />
                </div>
              </div>
              <div class="flex items-center gap-2 justify-end mt-4">
                <button
                  type="reset"
                  class="py-2 px-5 inline-flex items-center justify-center gap-2 font-semibold tracking-wide border border-transparent text-sm text-red-600 hover:border-red-500/20 hover:bg-red-500/20 rounded transition-all"
                >
                  <i class="ph-bold ph-x text-lg"></i> Cancel
                </button>
                <button
                  type="submit"
                  class="py-2 px-5 inline-flex items-center justify-center gap-2 font-semibold tracking-wide border text-sm bg-default-800 hover:bg-default-950 border-default-800 hover:border-default-950 text-default-50 rounded"
                >
                  <i class="ph-duotone ph-cloud-arrow-up text-lg"></i> Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <%- include('partials/footer') %>
    </div>

    <script>
      // Inicializa Choices para o select de cursos
      const courseChoices = new Choices("#choices-multiple-remove-button", {
        removeItemButton: true,
        placeholder: true,
        placeholderValue: "Select Course",
      });

      // Se você estiver usando o mesmo select para curso na página de cadastro de questão, ajuste:
      new Choices("#choices-multiple-remove-button");

      // Quando o curso é alterado, busca as matérias daquele curso
      $("#choices-multiple-remove-button").on("change", function () {
        // Obtenha o valor selecionado (se for múltiplo, escolha o primeiro, por exemplo)
        let selectedCourses = $(this).val();
        // Se houver pelo menos um curso selecionado, use o primeiro para filtrar as matérias
        if (selectedCourses && selectedCourses.length > 0) {
          const cursoId = selectedCourses[0];
          $.ajax({
            url: "/materias-por-curso/" + cursoId,
            type: "GET",
            success: function (data) {
              // Limpa e atualiza o select de matérias
              const materiaSelect = $("#select-materia");
              materiaSelect.empty();
              if (data.length > 0) {
                data.forEach(function (materia) {
                  materiaSelect.append(
                    `<option value="${materia.id}">${materia.nome}</option>`
                  );
                });
              } else {
                materiaSelect.append(
                  `<option value="">Nenhuma matéria encontrada</option>`
                );
              }
              // Se desejar, reinicialize o Choices.js para o select de matéria
              new Choices("#select-materia");
            },
            error: function () {
              console.error("Erro ao buscar matérias.");
            },
          });
        }
      });

      // Envio do formulário de cadastro de questão via AJAX
      $("#form-cadastrar-questao").submit(function (e) {
        e.preventDefault();
        $.ajax({
          url: "/cadastrar-questao",
          type: "POST",
          data: $(this).serialize(),
          success: function (response) {
            Swal.fire({
              title: response.message.includes("sucesso")
                ? "Sucesso!"
                : "Erro!",
              text: response.message.includes("sucesso")
                ? "Question added successfully!"
                : response.message,
              icon: response.message.includes("sucesso") ? "success" : "error",
              confirmButtonText: "OK",
              timer: 5000,
              timerProgressBar: true,
            }).then(() => {
              window.location.href = "/questoes?page=1";
            });
          },
          error: function (xhr) {
            let errorMsg =
              (xhr.responseJSON && xhr.responseJSON.error) ||
              "Error adding question.";
            Swal.fire({
              title: "Error!",
              text: errorMsg,
              icon: "error",
              confirmButtonText: "OK",
              timer: 5000,
              timerProgressBar: true,
            });
          },
        });
      });
    </script>
  </body>
</html>
