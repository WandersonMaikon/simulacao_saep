<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Editar Questão - Simulação Saep</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="assets/favicon-8fd74f43.ico" />
    <link rel="stylesheet" href="assets/theme-d32f8eb8.css" />
    <!-- Choices.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
    <!-- SweetAlert2 CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Choices.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <style>
      /* Você pode adicionar estilos adicionais aqui, se necessário */
    </style>
  </head>
  <body class="bg-primary/10">
    <%- include('partials/sidebar') %>
    <div class="min-h-screen flex flex-col lg:ps-64 w-full">
      <%- include('partials/header') %>
      <div class="p-6 space-y-6">
        <!-- Cabeçalho -->
        <div class="flex items-center justify-between w-full print:hidden">
          <h4 class="text-lg font-semibold text-default-900">
            Editar Questão
          </h4>
        </div>

        <!-- Formulário de Edição de Questão -->
        <div class="shadow rounded-lg bg-white dark:bg-default-50 h-fit">
          <div class="p-5 border-t border-dashed border-default-200">
            <form id="form-editar-questao" action="/editar-questao" method="POST">
              <!-- Campo oculto para o ID da questão -->
              <input type="hidden" name="id" value="<%= questao.id %>" />

              <div class="grid md:grid-cols-2 gap-4">
                <!-- Select de Curso -->
                <div class="w-full">
                  <div class="mb-2">
                    <label
                      for="curso_id"
                      class="form-label font-medium text-13 text-gray-500 dark:text-zinc-100"
                    >
                      Selecione o curso
                    </label>
                  </div>
                  <select name="curso_id" id="curso_id" placeholder="Selecione o curso" required>
                    <% if (cursos && cursos.length > 0) { %>
                      <% cursos.forEach(curso => { %>
                        <option value="<%= curso.id %>" <%= curso.id === questao.curso_id ? "selected" : "" %>>
                          <%= curso.nome %>
                        </option>
                      <% }); %>
                    <% } else { %>
                      <option value="">No course available</option>
                    <% } %>
                  </select>
                </div>
                <!-- Select de Matéria -->
                <div class="w-full">
                  <div class="mb-2">
                    <label
                      for="materia_id"
                      class="form-label font-medium text-13 text-gray-500 dark:text-zinc-100"
                    >
                      Selecione a matéria
                    </label>
                  </div>
                  <select name="materia_id" id="materia_id" placeholder="Selecione a matéria" required>
                    <% if (materias && materias.length > 0) { %>
                      <% materias.forEach(materia => { %>
                        <option value="<%= materia.id %>" <%= materia.id === questao.materia_id ? "selected" : "" %>>
                          <%= materia.nome %>
                        </option>
                      <% }); %>
                    <% } else { %>
                      <option value="">Nenhuma matéria encontrada</option>
                    <% } %>
                  </select>
                </div>

                <!-- Título -->
                <div class="space-y-1 md:col-span-2">
                  <label for="questao_titulo" class="text-sm font-medium text-default-900">Título</label>
                  <input
                    type="text"
                    name="titulo"
                    id="questao_titulo"
                    placeholder="Informe o título da questão"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                    value="<%= questao.titulo %>"
                  />
                </div>

                <!-- Enunciado -->
                <div class="space-y-1 md:col-span-2">
                  <label for="questao_enunciado" class="text-sm font-medium text-default-900">Enunciado</label>
                  <textarea
                    name="enunciado"
                    id="questao_enunciado"
                    placeholder="Informe o enunciado da questão"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  ><%= questao.enunciado %></textarea>
                </div>

                <!-- Alternativas -->
                <div class="space-y-1">
                  <label for="alternativa_a" class="text-sm font-medium text-default-900">Alternativa A</label>
                  <input
                    type="text"
                    name="alternativa_a"
                    id="alternativa_a"
                    placeholder="Informe a alternativa A"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                    value="<%= questao.alternativa_a %>"
                  />
                </div>
                <div class="space-y-1">
                  <label for="alternativa_b" class="text-sm font-medium text-default-900">Alternativa B</label>
                  <input
                    type="text"
                    name="alternativa_b"
                    id="alternativa_b"
                    placeholder="Informe a alternativa B"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                    value="<%= questao.alternativa_b %>"
                  />
                </div>
                <div class="space-y-1">
                  <label for="alternativa_c" class="text-sm font-medium text-default-900">Alternativa C</label>
                  <input
                    type="text"
                    name="alternativa_c"
                    id="alternativa_c"
                    placeholder="Informe a alternativa C"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                    value="<%= questao.alternativa_c %>"
                  />
                </div>
                <div class="space-y-1">
                  <label for="alternativa_d" class="text-sm font-medium text-default-900">Alternativa D</label>
                  <input
                    type="text"
                    name="alternativa_d"
                    id="alternativa_d"
                    placeholder="Informe a alternativa D"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                    value="<%= questao.alternativa_d %>"
                  />
                </div>

                <!-- Resposta Correta -->
                <div class="space-y-1 md:col-span-2">
                  <label for="questao_resposta_correta" class="text-sm font-medium text-default-900">
                    Selecione a alternativa correta (A, B, C ou D)
                  </label>
                  <select
                    name="resposta_correta"
                    id="questao_resposta_correta"
                    class="block w-full rounded py-2.5 px-4 border"
                    required
                  >
                    <option value="">Selecione</option>
                    <option value="A" <%= questao.resposta_correta === "A" ? "selected" : "" %>>A</option>
                    <option value="B" <%= questao.resposta_correta === "B" ? "selected" : "" %>>B</option>
                    <option value="C" <%= questao.resposta_correta === "C" ? "selected" : "" %>>C</option>
                    <option value="D" <%= questao.resposta_correta === "D" ? "selected" : "" %>>D</option>
                  </select>
                </div>
              </div>

              <!-- Botões de ação agrupados em um contêiner flex -->
              <div class="flex items-center gap-2 justify-end mt-4">
                <button
                  type="button"
                  id="cancel-btn"
                  class="py-2 px-5 inline-flex items-center justify-center gap-2 font-semibold tracking-wide border border-transparent text-sm text-red-600 hover:border-red-500/20 hover:bg-red-500/20 rounded transition-all"
                >
                  <i class="ph-bold ph-x text-lg"></i> Cancelar
                </button>
                <button
                  type="submit"
                  class="py-2 px-5 inline-flex items-center justify-center gap-2 font-semibold tracking-wide border text-sm bg-default-800 hover:bg-default-950 border-default-800 hover:border-default-950 text-default-50 rounded"
                >
                  <i class="ph-duotone ph-cloud-arrow-up text-lg"></i> Salvar
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <%- include('partials/footer') %>
    </div>

    <script src="js/questaoEditar.js"></script>
  </body>
</html>
