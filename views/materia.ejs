<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Cadastrar Matéria - Simulação Saep</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="Cadastro de matérias no sistema" name="description" />
    <meta content="coderthemes" name="author" />

    <link rel="shortcut icon" href="assets/favicon-8fd74f43.ico" />
    <link rel="stylesheet" href="assets/theme-d32f8eb8.css" />

    <!-- SweetAlert2 CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
  </head>

  <body
    class="relative lg:h-screen py-6 flex justify-center items-center bg-auto bg-no-repeat bg-primary/10"
    style="background-image: url('assets/auth-bg-f57aaf4d.png')"
  >
    <div class="container">
      <div class="flex justify-center">
        <div class="lg:w-1/3 md:w-2/3 w-full relative">
          <div
            class="relative bg-white rounded-lg shadow-lg p-6 z-10 dark:bg-default-50"
          >
            <a href="/" class="block mb-8 text-center">
              <img
                class="h-12 dark:hidden mx-auto"
                src="assets/saep.png"
                alt="Logo StudyZen"
              />
            </a>

            <h4
              class="text-2xl font-semibold text-default-800 mb-2 text-center"
            >
              Cadastro de Matéria
            </h4>

            <% if (message) { %>
            <div class="alert alert-danger text-center"><%= message %></div>
            <% } %>

            <form action="/materia" method="POST">
              <div class="mb-4">
                <label
                  for="nome_materia"
                  class="block text-base font-semibold text-default-900 mb-2"
                  >Nome da Matéria</label
                >
                <input
                  type="text"
                  class="block w-full rounded py-2.5 px-4 border"
                  id="nome_materia"
                  name="nome_materia"
                  placeholder="Digite o nome da matéria"
                  required
                />
              </div>

              <div class="mb-6 text-center">
                <button
                  type="submit"
                  class="bg-primary text-white w-full py-3 rounded"
                >
                  Cadastrar
                </button>
              </div>
              <h4 class="text-center text-base text-default-700 mb-4">
                <a href="/dashboard" class="text-primary"
                  >Voltar ao Dashboard</a
                >
              </h4>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const alertMessage = "<%= message %>";

        if (alertMessage && alertMessage.trim() !== "") {
          Swal.fire({
            title: alertMessage.includes("sucesso") ? "Sucesso!" : "Erro!",
            text: alertMessage.includes("sucesso")
              ? "Matéria cadastrada com sucesso!"
              : alertMessage,
            icon: alertMessage.includes("sucesso") ? "success" : "error",
            confirmButtonText: "OK",
            timer: 3000, // O alerta desaparecerá após 3 segundos
            timerProgressBar: true,
          }).then(() => {
            if (alertMessage.includes("sucesso")) {
              window.location.href = "/dashboard"; // Redireciona para o dashboard após sucesso
            } else {
              window.location.href = "/cadastrar-materia"; // Redireciona para a tela de cadastro em caso de erro
            }
          });
        }
      });
    </script>
  </body>
</html>
