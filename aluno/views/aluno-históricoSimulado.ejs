<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Histórico do Simulado <%= simuladoId %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container my-5">
      <h1 class="mb-4">Histórico do Simulado <%= simuladoId %></h1>
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Aluno</th>
            <th>Tentativa</th>
            <th>Data da Tentativa</th>
            <th>Nota</th>
            <th>Total de Questões</th>
            <th>Acertos</th>
            <th>Erros</th>
            <th>Em Branco</th>
          </tr>
        </thead>
        <tbody>
          <% historico.forEach(function(item) { %>
            <tr>
              <td><%= item.aluno_nome %> (ID: <%= item.aluno_id %>)</td>
              <td><%= item.tentativa_id %></td>
              <td><%= new Date(item.data_tentativa).toLocaleString() %></td>
              <td><%= item.nota %></td>
              <td><%= item.total_questoes %></td>
              <td><%= item.acertos %></td>
              <td><%= item.wrongAnswers %></td>
              <td><%= item.blank %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
